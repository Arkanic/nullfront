{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "allowJs": true,
        "sourceMap": false,
        "outDir": "./build",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types",
            "src/client/types"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}